<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_view"
            style="@style/BorderTextViewStyleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumround_eb"
            android:text="18:29"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/day_view"
            style="@style/BorderTextViewStyleDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumround_b"
            android:text="01월 15일"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.6"
            android:background="@drawable/rounded_bottom_background"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumround_eb"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Health Care Soultion"
                android:textColor="@color/app_private_color"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumround_b"
                android:text="테스트 메시지" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="0.4"
            android:background="@drawable/rounded_top_background"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.widget.Button
                    android:id="@+id/button2"
                    style="@style/MyButtonStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/nanumround_eb"
                    android:text="피보호자" />

                <android.widget.Button
                    android:id="@+id/button5"
                    style="@style/MyButtonStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/nanumround_eb"
                    android:text="피보호자" />

                <android.widget.Button
                    android:id="@+id/button6"
                    style="@style/MyButtonStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/nanumround_eb"
                    android:text="피보호자" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/vertical_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/mark" />

                <android.widget.Button
                    android:id="@+id/button3"
                    style="@style/MyButtonStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/nanumround_eb"
                    android:text="📞 보호자" />

                <android.widget.Button
                    android:id="@+id/button4"
                    style="@style/MyButtonStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/nanumround_eb"
                    android:text="📞 담당의" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            style="@style/BorderTextViewStyleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumround_eb"
            android:gravity="center"
            android:padding="30dp"
            android:text="재실"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            style="@style/BorderTextViewStyleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumround_eb"
            android:gravity="center"
            android:padding="30dp"
            android:text="활동"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView5"
            style="@style/BorderTextViewStyleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumround_eb"
            android:gravity="center"
            android:padding="30dp"
            android:text="특이사항"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumround_b"
                android:gravity="center"
                android:text="화요일"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumround_b"
                android:gravity="center"
                android:text="17℃"
                android:textSize="30sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nb02" />

        <android.widget.Button
            android:id="@+id/button"
            style="@style/MyButtonStyle1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumround_eb"
            android:text="보호자" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:contentDescription="메뉴 아이콘"
            android:src="@drawable/menu_icon" />
    </LinearLayout>

</LinearLayout>